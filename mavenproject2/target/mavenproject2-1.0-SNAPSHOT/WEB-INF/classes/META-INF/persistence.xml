<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="HeroPu" transaction-type="JTA">
      <jta-data-source>jboss/datasources/javaee</jta-data-source>
    <class>com.mycompany.mavenproject2.model.Species</class>
    <class>com.mycompany.mavenproject2.model.User</class>
    <class>com.mycompany.mavenproject2.model.Empire</class>
    <class>com.mycompany.mavenproject2.model.Hero</class>
    <class>com.mycompany.mavenproject2.model.Hibryd</class>
    <class>com.mycompany.mavenproject2.model.BuildUp</class>
    <class>com.mycompany.mavenproject2.model.Building</class>
    <class>com.mycompany.mavenproject2.model.MineralResource</class>
    <class>com.mycompany.mavenproject2.model.Resources</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <validation-mode>NONE</validation-mode>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
      <property name="eclipselink.logging.level" value="ALL"/>
      <property name="eclipselink.logging.level.sql" value="FINE"/>
      <property name="eclipselink.logging.parameters" value="true"/>
      <property name="eclipselink.logging.timestamp" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
